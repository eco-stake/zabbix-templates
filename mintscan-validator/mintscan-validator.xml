<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>5.0</version>
    <date>2022-02-16T21:03:15Z</date>
    <groups>
        <group>
            <name>Tendermint Nodes</name>
        </group>
    </groups>
    <templates>
        <template>
            <template>Mintscan Validator</template>
            <name>Mintscan Validator</name>
            <templates>
                <template>
                    <name>Tendermint Validator</name>
                </template>
            </templates>
            <groups>
                <group>
                    <name>Tendermint Nodes</name>
                </group>
            </groups>
            <applications>
                <application>
                    <name>Mintscan Validator Status</name>
                </application>
                <application>
                    <name>Mintscan Validator Uptime</name>
                </application>
            </applications>
            <items>
                <item>
                    <name>Jailed</name>
                    <type>DEPENDENT</type>
                    <key>jailed</key>
                    <delay>0</delay>
                    <applications>
                        <application>
                            <name>Mintscan Validator Status</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <params>$.jailed</params>
                        </step>
                        <step>
                            <type>BOOL_TO_DECIMAL</type>
                            <params/>
                        </step>
                    </preprocessing>
                    <master_item>
                        <key>mintscan-status</key>
                    </master_item>
                </item>
                <item>
                    <name>Mintscan Status</name>
                    <type>HTTP_AGENT</type>
                    <key>mintscan-status</key>
                    <delay>30s</delay>
                    <history>0</history>
                    <trends>0</trends>
                    <value_type>TEXT</value_type>
                    <applications>
                        <application>
                            <name>Mintscan Validator Status</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <params>$.body</params>
                        </step>
                        <step>
                            <type>JAVASCRIPT</type>
                            <params>value = JSON.parse(value);
return JSON.stringify({
  rank: value['rank'],
  jailed: value['jailed']
})</params>
                        </step>
                    </preprocessing>
                    <timeout>5s</timeout>
                    <url>https://api-{$NETWORK}.cosmostation.io/v1/staking/validator/{$VALIDATOR_ADDRESS}</url>
                    <output_format>JSON</output_format>
                </item>
                <item>
                    <name>Mintscan Uptime</name>
                    <type>HTTP_AGENT</type>
                    <key>mintscan-uptime</key>
                    <delay>5s</delay>
                    <history>0</history>
                    <trends>0</trends>
                    <value_type>TEXT</value_type>
                    <applications>
                        <application>
                            <name>Mintscan Validator Uptime</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <params>$.body</params>
                        </step>
                    </preprocessing>
                    <timeout>5s</timeout>
                    <url>https://api-{$NETWORK}.cosmostation.io/v1/staking/validator/uptime/{$VALIDATOR_ADDRESS}</url>
                    <output_format>JSON</output_format>
                </item>
                <item>
                    <name>Missed Blocks</name>
                    <type>DEPENDENT</type>
                    <key>missed-blocks</key>
                    <delay>0</delay>
                    <units>blocks</units>
                    <applications>
                        <application>
                            <name>Mintscan Validator Uptime</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <params>$.uptime.length()</params>
                        </step>
                    </preprocessing>
                    <master_item>
                        <key>mintscan-uptime</key>
                    </master_item>
                    <triggers>
                        <trigger>
                            <expression>{last()}&gt;0</expression>
                            <name>Block missed</name>
                            <opdata>Missed: {ITEM.LASTVALUE}</opdata>
                            <priority>AVERAGE</priority>
                            <dependencies>
                                <dependency>
                                    <name>Block missed warning</name>
                                    <expression>{Mintscan Validator:missed-blocks.last()}&gt;{$BLOCK_MISSED_WARN}</expression>
                                </dependency>
                            </dependencies>
                        </trigger>
                        <trigger>
                            <expression>{last()}&gt;{$BLOCK_MISSED_WARN}</expression>
                            <name>Block missed warning</name>
                            <opdata>Missed: {ITEM.LASTVALUE}</opdata>
                            <priority>HIGH</priority>
                        </trigger>
                    </triggers>
                </item>
                <item>
                    <name>Validator Rank</name>
                    <type>DEPENDENT</type>
                    <key>validator-rank</key>
                    <delay>0</delay>
                    <applications>
                        <application>
                            <name>Mintscan Validator Status</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <params>$.rank</params>
                        </step>
                    </preprocessing>
                    <master_item>
                        <key>mintscan-status</key>
                    </master_item>
                    <triggers>
                        <trigger>
                            <expression>{last()}&gt;{prev()}</expression>
                            <name>Rank decrease</name>
                            <opdata>Rank: {ITEM.VALUE1}</opdata>
                            <priority>INFO</priority>
                            <type>MULTIPLE</type>
                        </trigger>
                        <trigger>
                            <expression>{last()}&lt;{prev()}</expression>
                            <name>Rank increase</name>
                            <opdata>Rank: {ITEM.VALUE1}</opdata>
                            <priority>INFO</priority>
                            <type>MULTIPLE</type>
                        </trigger>
                    </triggers>
                </item>
            </items>
            <macros>
                <macro>
                    <macro>{$BLOCK_MISSED_WARN}</macro>
                    <value>10</value>
                </macro>
                <macro>
                    <macro>{$VALIDATOR_ADDRESS}</macro>
                </macro>
            </macros>
        </template>
    </templates>
    <graphs>
        <graph>
            <name>Missed Blocks</name>
            <graph_items>
                <graph_item>
                    <sortorder>1</sortorder>
                    <color>1A7C11</color>
                    <item>
                        <host>Mintscan Validator</host>
                        <key>missed-blocks</key>
                    </item>
                </graph_item>
            </graph_items>
        </graph>
        <graph>
            <name>Validator Rank</name>
            <graph_items>
                <graph_item>
                    <sortorder>1</sortorder>
                    <color>1A7C11</color>
                    <item>
                        <host>Mintscan Validator</host>
                        <key>validator-rank</key>
                    </item>
                </graph_item>
            </graph_items>
        </graph>
    </graphs>
</zabbix_export>
